<!DOCTYPE html>
<html lang="en">
 
 
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - SharedTravelBG</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css?v=2" />




</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">SharedTravelBG</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               href="#"
                               id="tripsDropdown"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Trips
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="tripsDropdown">
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Trips"
                                       asp-action="Index">
                                        Current Trips
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Trips"
                                       asp-action="Old">
                                        Old Trips
                                    </a>
                                </li>
                            </ul>
                        </li>





                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Reviews")">Reviews</a></li>


                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   id="rentalsDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Rentals
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="rentalsDropdown">
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="RentedVehicles"
                                           asp-action="Index">
                                            By People
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="RentingCompanies"
                                           asp-action="Index">
                                            By Companies
                                        </a>
                                    </li>
                                </ul>
                            </li>


                            
                                


                            
                        

                        
                      
                           
                        

                    </ul>
                    <ul class="navbar-nav">

                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown d-inline-block">
                                <button class="btn btn-primary dropdown-toggle"
                                        type="button"
                                        id="userMenuButton"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    My Dashboard
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="userMenuButton">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Trips" asp-action="MyTrips">
                                            Participating Trips
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Trips" asp-action="MyOrganized">
                                            Organized Trips
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reviews" asp-action="MyReviews">
                                            My Reviews
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="Profile">
                                            My Profile
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <!-- Use the new GET logout endpoint -->
                                        <a class="dropdown-item" href="@Url.Action("Logout", "Account")">Logout</a>
                                    </li>
                                </ul>
                            </div>
                           
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Identity/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Identity/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-3">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center mt-auto py-3">
        <div class="container">
            &copy; @DateTime.Now.Year – SharedTravelBG
        </div>


       








    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
