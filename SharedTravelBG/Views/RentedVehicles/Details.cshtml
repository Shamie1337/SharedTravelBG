@model SharedTravelBG.Models.RentedVehicle

@{
    ViewData["Title"] = "Подробности за наем";
}

<h1>Подробности за наем</h1>

<div>
    <h4>Информация за наема</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Модел автомобил</dt>
        <dd class="col-sm-10">@Model.VehicleModel</dd>

        <dt class="col-sm-2">Телефон на наемателя</dt>
        <dd class="col-sm-10">@Model.RenterPhoneNumber</dd>

        <dt class="col-sm-2">Цена на ден</dt>
        <dd class="col-sm-10">@Model.PricePerDay.ToString("C")</dd>

        <dt class="col-sm-2">Регистрационен номер</dt>
        <dd class="col-sm-10">@Model.LicensePlateNumber</dd>

        <dt class="col-sm-2">Цвят</dt>
        <dd class="col-sm-10">@Model.Color</dd>

        <dt class="col-sm-2">Описание</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактирай</a> |
    <a asp-action="Index">Обратно към списъка с наеми</a>
</div>
