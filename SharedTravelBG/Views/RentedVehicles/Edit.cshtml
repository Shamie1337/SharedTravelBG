@model SharedTravelBG.Models.RentedVehicle

@{
    ViewData["Title"] = "Edit Rental";
}

<h1>Edit Rental</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="VehicleModel" class="control-label"></label>
        <input asp-for="VehicleModel" class="form-control" />
        <span asp-validation-for="VehicleModel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RenterPhoneNumber" class="control-label"></label>
        <input asp-for="RenterPhoneNumber" class="form-control" />
        <span asp-validation-for="RenterPhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PricePerDay" class="control-label"></label>
        <input asp-for="PricePerDay" class="form-control" />
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LicensePlateNumber" class="control-label"></label>
        <input asp-for="LicensePlateNumber" class="form-control" />
        <span asp-validation-for="LicensePlateNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color" class="control-label"></label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<p>
    <a class="btn btn-secondary" asp-action="Index">Back to Rentals List</a>
</p>
