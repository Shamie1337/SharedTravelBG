@model IEnumerable<SharedTravelBG.Models.RentedVehicle>


@{
    ViewData["Title"] = "Rentals";
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<h1>Rentals</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Rental Vehicle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Vehicle Model</th>
            <th>Renter Phone</th>
            <th>Price/Day</th>
            <th>License Plate</th>
            <th>Color</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model)
        {
            <tr>
                <td>@rental.VehicleModel</td>
                <td>@rental.RenterPhoneNumber</td>
                <td>@rental.PricePerDay.ToString("C")</td>
                <td>@rental.LicensePlateNumber</td>
                <td>@rental.Color</td>
                <td>
                    <!-- Details button is always visible -->
                    <a asp-action="Details" asp-route-id="@rental.Id">Details</a>
                    @if (rental.RenterId == currentUserId || User.IsInRole("Admin"))
                    {
                     <a asp-action = "Edit" asp-route-id = "@rental.Id" > Edit </a>
                    
                    <form asp-action = "Delete" method = "post" class="d-inline">
                    <input type = "hidden" name="id" value="@rental.Id" />
                    @Html.AntiForgeryToken()
                    <button type = "submit" class="btn btn-link">Delete</button>
                    </form>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
