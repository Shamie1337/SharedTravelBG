@model SharedTravelBG.Models.RentedVehicle

@{
    ViewData["Title"] = "Add New Rental Vehicle";
}

<h1>Add New Rental Vehicle</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="VehicleModel" class="control-label"></label>
        <input asp-for="VehicleModel" class="form-control" placeholder="Enter Vehicle Model" />
        <span asp-validation-for="VehicleModel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RenterPhoneNumber" class="control-label"></label>
        <input asp-for="RenterPhoneNumber" class="form-control" placeholder="Enter your phone number" />
        <span asp-validation-for="RenterPhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PricePerDay" class="control-label"></label>
        <input asp-for="PricePerDay" class="form-control" placeholder="Enter price per day" />
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" placeholder="Optional description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LicensePlateNumber" class="control-label"></label>
        <input asp-for="LicensePlateNumber" class="form-control" placeholder="Enter License Plate Number" />
        <span asp-validation-for="LicensePlateNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color" class="control-label"></label>
        <input asp-for="Color" class="form-control" placeholder="Enter Car Color" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Rental</button>
</form>

<p>
    <a class="btn btn-secondary" asp-action="Index">Back to Rentals List</a>
</p>
