@model SharedTravelBG.Models.RentingCompany

@{
    ViewData["Title"] = "Изтриване на компания";
}

<h1>Изтриване на компания за наем</h1>

<h3>Сигурни ли сте, че искате да изтриете тази компания?</h3>
<div>
    <h4>Компания</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Име</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Адрес</dt>
        <dd class="col-sm-10">@Model.Address</dd>
        <dt class="col-sm-2">Телефонен номер</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Изтрий" class="btn btn-danger" /> |
    <a asp-action="Index">Обратно към списъка</a>
</form>
