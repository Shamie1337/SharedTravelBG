@model SharedTravelBG.Models.Review

@{
    ViewData["Title"] = "Review Details";
}

<h1>Review Details</h1>

<div>
    <h4>Review Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Trip</dt>
        <dd class="col-sm-10">
            @if (Model.Trip != null)
            {
                @($"{Model.Trip.DepartureTown} to {Model.Trip.DestinationTown}")
            }
            else
            {
                <span>N/A</span>
            }
        </dd>
        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to Reviews List</a>
</div>
