@model SharedTravelBG.Models.Review

@{
    ViewData["Title"] = "Изтриване на отзив";
}

<h1>Изтриване на отзив</h1>

<h3>Сигурни ли сте, че искате да изтриете този отзив?</h3>
<div>
    <h4>Информация за отзива</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Съдържание</dt>
        <dd class="col-sm-10">@Model.Content</dd>

        <dt class="col-sm-2">Оценка</dt>
        <dd class="col-sm-10">@Model.Rating</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Изтрий</button>
    <a asp-action="Index" class="btn btn-secondary">Отказ</a>
</form>
