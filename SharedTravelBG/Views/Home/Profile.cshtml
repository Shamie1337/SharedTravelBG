@model SharedTravelBG.Models.ApplicationUser

@{
    ViewData["Title"] = "My Profile";
}

<h2>My Profile</h2>

<div class="mb-3">
    <a asp-action="Edit" class="btn btn-primary">Edit Profile</a>
</div>

<div class="card">
    <div class="card-body">
        <p><strong>Username:</strong> @Model.UserName</p>
        <p><strong>Full Name:</strong> @Model.FullName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <p>
            <strong>Average Organiser Rating:</strong>
            @ViewBag.AverageRating (from @ViewBag.ReviewCount reviews)
        </p>

    </div>
</div>


