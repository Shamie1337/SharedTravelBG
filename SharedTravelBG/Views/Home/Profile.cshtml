@model SharedTravelBG.Models.ApplicationUser

@{
    ViewData["Title"] = "Моят профил";
}

<h2>Моят профил</h2>

<div class="mb-3">
    <a asp-action="Edit" class="btn btn-primary">Редактирай профила</a>
</div>

<div class="card">
    <div class="card-body">
        <p><strong>Потребителско име:</strong> @Model.UserName</p>
        <p><strong>Пълно име:</strong> @Model.FullName</p>
        <p><strong>Имейл:</strong> @Model.Email</p>
        <p><strong>Телефонен номер:</strong> @Model.PhoneNumber</p>
        <p>
            <strong>Средна оценка на организатора:</strong>
            @ViewBag.AverageRating (от @ViewBag.ReviewCount отзива)
        </p>
    </div>
</div>
