@model SharedTravelBG.Models.Trip

@{
    ViewData["Title"] = "Изтриване на пътуване";
}

<h1>Изтриване на пътуване</h1>

<h3>Сигурни ли сте, че искате да изтриете това пътуване?</h3>
<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">От:</dt>
            <dd class="col-sm-10">@Model.DepartureTown</dd>

            <dt class="col-sm-2">До:</dt>
            <dd class="col-sm-10">@Model.DestinationTown</dd>

            <dt class="col-sm-2">Дата:</dt>
            <dd class="col-sm-10">@Model.TripDate:dd.MM.yyyy</dd>

            <dt class="col-sm-2">Организатор:</dt>
            <dd class="col-sm-10">@Model.Organizer.FullName (@Model.Organizer.UserName)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Да, изтрий</button>
    <a asp-action="Index" class="btn btn-secondary">Отказ</a>
</form>
