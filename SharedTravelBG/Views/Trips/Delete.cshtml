@model SharedTravelBG.Models.Trip

@{
    ViewData["Title"] = "Delete Trip";
}

<h1>Delete Trip</h1>

<h3>Are you sure you want to delete this trip?</h3>
<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">From:</dt>
            <dd class="col-sm-10">@Model.DepartureTown</dd>

            <dt class="col-sm-2">To:</dt>
            <dd class="col-sm-10">@Model.DestinationTown</dd>

            <dt class="col-sm-2">Date:</dt>
            <dd class="col-sm-10">@Model.TripDate:dd.MM.yyyy</dd>

            <dt class="col-sm-2">Organizer:</dt>
            <dd class="col-sm-10">@Model.Organizer.FullName (@Model.Organizer.UserName)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
