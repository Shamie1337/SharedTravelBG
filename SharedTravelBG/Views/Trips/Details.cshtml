@model SharedTravelBG.Models.Trip

@{
    ViewData["Title"] = "Trip Details";
    int availableSpots = ViewBag.AvailableSpots;
    double organiserRating = ViewBag.OrganiserRating;
    int reviewCount = ViewBag.ReviewCount;
    string currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    bool isOrganizer = (Model.OrganizerId == currentUserId);
    bool isParticipant = Model.Participants.Any(p => p.Id == currentUserId);
}

<h1>Trip Details</h1>

<div class="card mb-4">
    <div class="card-body">
        <h4>@Model.DepartureTown to @Model.DestinationTown</h4>
        <p><strong>Date:</strong> @Model.TripDate.ToShortDateString()</p>
        <p><strong>Planned Start:</strong> @Model.PlannedStartTime.ToString(@"hh\:mm")</p>
        <p>
            <strong>Organizer's Name:</strong> @Model.Organizer?.FullName<br />
            <strong>Organizer's Email:</strong> @Model.Organizer?.Email<br />
            <strong>Organizer's Overall Rating:</strong> @organiserRating.ToString("N1")
            @if (reviewCount > 0)
            {
                <span>(from @reviewCount reviews)</span>
            }
        </p>
        <p><strong>Organizer Phone:</strong> @Model.OrganizerPhoneNumber</p>
        <p><strong>Available Spots:</strong> @availableSpots</p>
        <p><strong>Participants:</strong> @Model.Participants.Count / @Model.MaxParticipants</p>
    </div>
</div>

<div>
    @if (!isOrganizer)
    {
        if (!isParticipant)
        {
            <form asp-action="Join" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.Id" />
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-success">Join</button>
            </form>
        }
        else
        {
            <form asp-action="Leave" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.Id" />
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-warning">Leave</button>
            </form>
        }
    }
    else
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    }
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Back to Trips</a>
</div>
