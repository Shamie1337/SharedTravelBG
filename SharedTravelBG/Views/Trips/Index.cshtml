@model IEnumerable<SharedTravelBG.Models.Trip>

@{
    ViewData["Title"] = "Trips";
    // Get the current logged-in user's ID.
    string currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">
        @TempData["Message"]
    </div>
}

<h1>Trips</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Trip</a>
</p>

<form method="get" class="row g-2 mb-4">
    <div class="col-sm-2">
        <input type="text" name="departure" value="@ViewData["departure"]"
               class="form-control" placeholder="From town…" />
    </div>
    <div class="col-sm-2">
        <input type="text" name="destination" value="@ViewData["destination"]"
               class="form-control" placeholder="To town…" />
    </div>
    <div class="col-sm-2">
        <input type="date" name="date" value="@ViewData["date"]"
               class="form-control" />
    </div>
    <div class="col-sm-2">
        <input type="time" name="time" value="@ViewData["time"]"
               class="form-control" />
    </div>
    <div class="col-sm-2">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
    <div class="col-sm-2">
        <a asp-action="Index" class="btn btn-secondary w-100">Reset</a>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        Няма намерени пътувания, които да отговарят на зададените критерии.
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Departure</th>
            <th>Destination</th>
            <th>Date</th>
            <th>Start Time</th>
            <th>Phone</th>
            <th>Available Spots</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trip in Model)
        {
            // Calculate available spots.
            int availableSpots = trip.MaxParticipants - (trip.Participants?.Count ?? 0);
            bool isOrganizer = (trip.OrganizerId == currentUserId);
            bool isParticipant = trip.Participants != null && trip.Participants.Any(p => p.Id == currentUserId);
            <tr>
                <td>@trip.DepartureTown</td>
                <td>@trip.DestinationTown</td>
                <td>@trip.TripDate.ToShortDateString()</td>
                <td>@trip.PlannedStartTime.ToString(@"hh\:mm")</td>
                <td>@trip.OrganizerPhoneNumber</td>
                <td>@availableSpots</td>
                <td>
                    <!-- Details button is always visible -->
                    <a class="btn btn-info btn-sm"
                       asp-controller="Trips"
                       asp-action="Details"
                       asp-route-id="@trip.Id">
                        Details
                    </a>

                    @if (isOrganizer)
                    {
                     <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@trip.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@trip.Id">Delete</a>
    }
                    else
                    {
                    if (isParticipant)
                    {
                     <form asp-action="Leave" method="post" class="d-inline">
                    <input type = "hidden" name="id" value="@trip.Id" />
                    @Html.AntiForgeryToken()
                    <button type = "submit" class="btn btn-warning btn-sm">Leave</button>
                    </form>
                    }
                    else
{
                     <form asp-action = "Join" method = "post" class= "d-inline" >
                    <input type="hidden" name="id" value="@trip.Id" />
                    @Html.AntiForgeryToken()
                    <button type="submit" class= "btn btn-success btn-sm" > Join </button >
                    </form >
                    }
                    }
            </td>
        </tr>
        }

       
    </tbody>
</table>
