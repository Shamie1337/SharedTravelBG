@model IEnumerable<SharedTravelBG.Models.Trip>
@{
    ViewData["Title"] = "Пътувания на " + (ViewBag.OrganizerName ?? "");
}
<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Няма активни пътувания.</div>
}
else
{
    <div class="row g-4">
        @foreach (var trip in Model)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            @trip.DepartureTown → @trip.DestinationTown
                        </h5>
                        <p class="card-text mb-3">
                            <strong>Дата:</strong> @trip.TripDate.ToString("dd.MM.yyyy")<br />
                            <strong>Час:</strong> @trip.PlannedStartTime.ToString(@"hh\:mm")
                        </p>
                        <div class="mt-auto">
                            <a asp-action="Details"
                               asp-route-id="@trip.Id"
                               class="btn btn-outline-secondary w-100">
                                Детайли
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
