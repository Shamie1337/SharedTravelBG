@model SharedTravelBG.Models.Vehicle

@{
    ViewData["Title"] = "Vehicle Details";
}

<h1>Vehicle Details</h1>

<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Make</dt>
        <dd class="col-sm-10">@Model.Make</dd>
        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>
        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Year</dd>
        <dt class="col-sm-2">Color</dt>
        <dd class="col-sm-10">@Model.Color</dd>
        <dt class="col-sm-2">Owner</dt>
        <dd class="col-sm-10">@Model.Owner?.UserName</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
